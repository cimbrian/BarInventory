@* Stat card component for dashboard display *@

<div class="stat-card">
    <div class="stat-label">@Label</div>
    <div class="stat-value @ValueClass">@Value</div>
    @if (!string.IsNullOrEmpty(Change))
    {
        <div class="stat-change @ChangeClass">
            <span>@ChangeIcon</span>
            <span>@Change</span>
        </div>
    }
</div>

@code {
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public string? Change { get; set; }
    [Parameter] public string ValueClass { get; set; } = "";
    [Parameter] public bool IsPositiveGood { get; set; } = true;
    
    private string ChangeClass
    {
        get
        {
            if (string.IsNullOrEmpty(Change)) return "";
            var isPositive = Change.StartsWith("+") || (!Change.StartsWith("-") && decimal.TryParse(Change.TrimEnd('%'), out var val) && val > 0);
            return IsPositiveGood ? (isPositive ? "positive" : "negative") : (isPositive ? "negative" : "positive");
        }
    }
    
    private string ChangeIcon
    {
        get
        {
            if (string.IsNullOrEmpty(Change)) return "";
            if (Change.StartsWith("+")) return "↑";
            if (Change.StartsWith("-")) return "↓";
            return "→";
        }
    }
}
